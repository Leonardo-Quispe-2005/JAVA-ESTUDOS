package Controle;

import java.util.Scanner;

public class ExercicioNumeroPositivos {
	public static void main(String[] args) {
		Scanner entrada = new Scanner(System.in);
		
		int positivos = 0;
		int soma, negativos;
		
		System.out.println("Digite 1 número positivo para continuar\n");
		System.out.println("Digite 1 número negativo para finalizar\n");
		
		System.out.print("Digite 1 número positivo para continuar ou 1 negativo para finalizar: ");
		int n1 = entrada.nextInt();
		
		while (n1 >= 0) {
			System.out.print("Digite um número: ");
			n1 = entrada.nextInt();
			
		}
		System.out.println("acabou");
		
		entrada.close();
	}
}
