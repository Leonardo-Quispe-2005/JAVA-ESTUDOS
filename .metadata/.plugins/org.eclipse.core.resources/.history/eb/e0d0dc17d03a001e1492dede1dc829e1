package Controle;

import java.util.Scanner;

public class ExercicioLetraPorLetra {
	public static void main(String[] args) {
		Scanner entrada = new Scanner(System.in);
		
		char[] letras = null;
		String palavra = "";
		
		do {
			System.out.print("Digite uma palavra: ");
			palavra = entrada.nextLine(); // aqui estou recebendo uma palavra
			
			letras = palavra.toCharArray(); //aqui estarei contando quanto caracteres a palavra tem
			// feito isso em letras vc ter√°:
			// letras[0] = 'J';
			// letras[1] = 'a';
			// letras[2] = 'v';
			// letras[3] = 'a';
			System.out.println("quantidade de letras: " + letras.length);
			
			System.out.println(letras[1]);
			
			
			
			
			
			
		} while (!palavra.equalsIgnoreCase("sair"));
			
		
		System.out.println(palavra);
		
		
		entrada.close();
	}
}
